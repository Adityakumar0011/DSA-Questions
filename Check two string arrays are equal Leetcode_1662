class Solution {
public:
    bool arrayStringsAreEqual(vector<string>& word1, vector<string>& word2) {
        string str1="";         // make two empty strings str1 and str2
        string str2="";
        for(int i=0;i<word1.size();i++){       //add each string from start to end index of word1 to str1
            str1.append(word1[i]);
        }
        for(int j=0;j<word2.size();j++){        //add each string from start to end index of word2 to str2
            str2.append(word2[j]);
        }
        if(str1==str2){     // check if both str1 and str2 is equal. if equal return true
            return true;
        }

        return false;       // if str1 not equal to str2 then return false
    }
};
