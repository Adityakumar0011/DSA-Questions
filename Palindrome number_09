class Solution {
public:
    bool isPalindrome(int x) {
        int temp=x;
        int remainder;
        long int answer=0;
        if(x<0){
            return false;
        }
        else{
            while(x!=0){
                remainder=x%10;
                answer=(answer*10)+remainder;
                x=x/10;
            }
        }
        if(answer==temp){
            return true;
        }
        return false;
    }
};
